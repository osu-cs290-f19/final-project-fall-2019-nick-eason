<main class="content">
	<section id="posts">
		{{#each card}}
			{{> post}}
		{{/each}}
	</section>
</main>

<button type="button" id="add-post-button"><span>+</span></button>
<div id="modal-backdrop" class="hidden"></div>
<div class="post-modal-box hidden">
<div id="add-post-modal">
	
		<div class="modal-dialog">
			<div class="modal-header">
				<h3>Add a Review</h3>
				<button type="button" id="modal-close" class="modal-hide-button">&times;</button>
			</div>
		
			<div class="modal-body">
				<div class="post-input-element">
					<label for="title-input">Title</label>
					<input type="text" id="title-input"></input>
				</div>
			
					<div class="post-input-element">
					<label for="photo-url-input">Photo URL</label>
					<input type="text" id="photo-url-input"></input>
				</div>
		
				<div class="post-input-element">
					<label for="rating-input">Rating (out of 5)</label>
					<input type="text" id="rating-input"></input>
					</div>
			
				<div class="post-input-element">
					<label for="genre-input">Genre</label>
					<input type="text" id="genre-input"></input>
					</div>
		
				<div class="post-input-element">
					<label for="review-input">Review</label>
					<input type="text" id="review-input"></input>
				</div>
			</div>

			<div class="modal-footer">
				<button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
				<button type="button" id="modal-accept" class="action-button">Add Post</button>
			</div>
		</div>	
	</div>
</div>
